{
	"name": "modern-webpack-starter-project",
	"version": "0.0.2",
	"description": "A simple, modern, webpack starter project including hot reloading capabilities as well as SCSS and typescript support",
	"main": "index.js",
	"repository": "https://github.com/cfv1984/modern-webpack-starter-project",
	"author": "Carlos Vergara <cfvergara@gmail.com>",
	"license": "Apache-2.0",
	"private": false,
	"scripts": {
		"lint:js": "eslint -c .eslintrc.json ./src",
		"lint:ts": "tslint -p ./tsconfig.json",
		"lint": "npm run lint:js && npm run lint:ts",
		"build": "webpack --config webpack.config.js --mode=production",
		"serve": "webpack-dev-server --config webpack.config.js --mode=development --open --hot"
	},
	"devDependencies": {
		"@babel/core": "7.1.2",
		"@babel/preset-env": "7.1.0",
		"babel-loader": "8.0.4",
		"babel-plugin-prismjs": "1.0.2",
		"css-loader": "1.0.0",
		"eslint": "5.6.1",
		"mini-css-extract-plugin": "0.4.3",
		"node-sass": "4.9.3",
		"sass-loader": "7.1.0",
		"style-loader": "0.23.0",
		"ts-loader": "5.2.1",
		"tslint": "5.11.0",
		"typescript": "3.1.1",
		"webpack": "4.20.2",
		"webpack-cli": "3.1.2",
		"webpack-dev-server": "3.1.9"
	},
	"dependencies": {
		"prismjs": "1.15.0"
	}
}
